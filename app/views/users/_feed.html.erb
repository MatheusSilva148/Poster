    <% if user_signed_in? and current_user == @user %>
        <div class="box">
            <p class="title is-5">Post about it</p>
            <article class="media">
                <div class="media-content">
                    <div class="content">
                        <%= render 'posts/form' %>
                    </div>
                </div>
            </article>
        </div>
    <% end %>

    <% @posts.each do | post | %>
      <div class="box">
          <article class="media">
              <figure class="media-left">
                  <p class="image is-48x48">
                      <%= image_tag(@user.avatar_thumbnail) %>
                  </p>
              </figure>
              <div class="content">
                  <strong><%= post.user.name %></strong><br><small>@<%= post.user.username %></small>
              </div>
          </article>
          <article class="media">
            <div class="media-content">
              <div class="content">
                <p>
                  <%= post.post %>
                </p>
              </div>
              <hr>
                <% if user_signed_in? and current_user == post.user %>
                    <nav class="level is-mobile">
                        <div class="level-left">
                        <a class="level-item">
                            <%= link_to post do %>
                                <span class="icon is-large"><i class="fa fa-link"></i></span>
                            <% end %>
                        </a>
                        <a class="level-item">
                            <%= link_to edit_post_path(post) do %>
                                <span class="icon is-large"><i class="fa fa-pencil"></i></span>
                            <% end %>
                        </a>
                        <a class="level-item">
                            <%= link_to post, method: :delete, data: { confirm: "Are you sure you want to delete this post?" } do %>
                                <span class="icon is-large"><i class="fa fa-trash-o"></i></span>
                            <% end %>
                        </a>
                        </div>
                    </nav>
                <% end %>
            </div>
          </article>     
      </div>
    <% end %>
