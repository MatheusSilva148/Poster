<div class="column">
	<nav class="panel">
		<p class="panel-heading">Profile</p>
		<div class="panel-block">
			<%= link_to current_user do %>
				<article class="media">
					<div class="media-left">
						<figure class="image is-64x64">
							<%= image_tag(current_user.avatar_thumbnail) %>
						</figure>
					</div>
					
					<div class="media-content">
						<div class="content has-text-grey-darker">
							<p>
								
									<strong><%= current_user.name %></strong><br />
							
								<small>@<%= current_user.username %></small>
							</p>
						</div>
					</div>
					
				</article>
			<% end %>
		</div>
		<div class="panel-block">
			<div class="level is-mobile">
				<div class="level-item has-centered-text">
					<div>
						<p class="heading">Posts</p>
						<p class="title is-6"><%= current_user.posts.count %></p>
					</div>
				</div>
				<div class="level-item has-centered-text">
					<div>
						<p class="heading">Following</p>
						<p class="title is-6">0</p>
					</div>
				</div>
					<div class="level-item has-centered-text">
					<div>
						<p class="heading">Followers</p>
						<p class="title is-6">0</p>
					</div>
				</div>
			</div>
		</div>
	</nav>
</div>