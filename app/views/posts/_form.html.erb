<%= simple_form_for(@post) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :post, label: false,  input_html: { class: "textarea" }, wrapper: false, placeholder: "Compose a new post..." %>
  </div>
</div>
<%= f.button :submit, class: "button is-primary" %>
<% end %>