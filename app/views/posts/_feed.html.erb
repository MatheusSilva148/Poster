<div class="column is-half">
    <div class="box">
        <article class="media">
                <figure class="media-left">
                    <p class="image is-48x48">
                        <img src="https://i.pinimg.com/originals/1b/ef/b5/1befb5723f54627768e1d77642ca4d45.jpg">
                    </p>
                </figure>
                <div class="content">
                  <strong>Matheus da Silva</strong><br><small>@matheusdasilva</small>
              </div>
        </article>
        <article class="media">
              <div class="media-content">
                  <div class="content">
                      <%= render 'posts/form' %>
                  </div>
              </div>
        </article>
    </div>

    <% @posts.each do | post | %>
      <div class="box">
          <article class="media">
              <figure class="media-left">
                  <p class="image is-48x48">
                      <img src="https://i.pinimg.com/originals/1b/ef/b5/1befb5723f54627768e1d77642ca4d45.jpg">
                  </p>
              </figure>
              <div class="content">
                  <strong>Matheus da Silva</strong><br><small>@matheusdasilva</small>
              </div>
          </article>
          <article class="media">
            <div class="media-content">
              <div class="content">
                <p>
                  <%= post.post %>
                </p>
              </div>
              <hr>
              <nav class="level is-mobile">
                <div class="level-left">
                  <a class="level-item">
                      <%= link_to post do %>
                          <span class="icon is-large"><i class="fa fa-link"></i></span>
                      <% end %>
                  </a>
                  <a class="level-item">
                      <%= link_to edit_post_path(post) do %>
                          <span class="icon is-large"><i class="fa fa-pencil"></i></span>
                      <% end %>
                  </a>
                  <a class="level-item">
                      <%= link_to post, method: :delete, data: { confirm: "Are you sure you want to delete this post?" } do %>
                          <span class="icon is-large"><i class="fa fa-trash-o"></i></span>
                      <% end %>
                  </a>
                </div>
              </nav>
            </div>
          </article>     
      </div>
    <% end %>
</div>