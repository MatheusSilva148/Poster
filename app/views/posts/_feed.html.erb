<div class="column is-half">
    <article class="media box">
        <figure class="media-left">
            <p class="image is-64x64">
                <img src="https://i.pinimg.com/originals/1b/ef/b5/1befb5723f54627768e1d77642ca4d45.jpg">
            </p>
        </figure>
        <div class="media-content">
            <%= render 'posts/form' %>
        </div>
    </article>

<% @posts.each do | post | %>
    <div class="box">
        <article class="media">
            <div class="media-left">
                <figure class="image is-64x64">
                    <img src="https://i.pinimg.com/originals/1b/ef/b5/1befb5723f54627768e1d77642ca4d45.jpg">
                </figure>
            </div>
            <div class="media-content">
                <div class="content">
                    <strong>Matheus da Silva</strong><br/>
                    <small>@matheusdasilva</small><br/>
                    <p><%= post.post %></p>
                </div>
                <div class="level">
                    <div class="level-left is-mobile">
                        <%= link_to post, class: "level-item" do %>
                        <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
                        <% end %>
                        <%= link_to edit_post_path(post), class: "level-item" do %>
                        <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
                        <% end %>
                        <%= link_to post, method: :delete, data: { confirm: "Are you sure you want to delete this post?" } do %>
                                <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                        <% end %>
  				    </div>
  			    </div>
            </div>
        </article>     
    </div>
<% end %>
</div>